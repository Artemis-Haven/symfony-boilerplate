<meta charset="UTF-8">
<meta name="description" content="{% block description %}{{ meta('Meta : Description') }}{% endblock %}" />
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<link href="https://fonts.googleapis.com/css?family=Merriweather:400,700,700i|Oswald:400,500,600,700|Roboto:400,700,700i|Josefin+Sans:ital,wght@0,400;0,500;0,600;0,700;1,400;1,500&display=swap" rel="stylesheet">

{# Favicons #}
<link rel="apple-touch-icon" sizes="180x180" href="{{ absolute_url(asset('images/icons/apple-touch-icon.png')) }}">
<link rel="icon" type="image/png" sizes="32x32" href="{{ absolute_url(asset('images/icons/favicon-32x32.png')) }}">
<link rel="icon" type="image/png" sizes="16x16" href="{{ absolute_url(asset('images/icons/favicon-16x16.png')) }}">
<link rel="manifest" href="{{ absolute_url(asset('images/icons/site.webmanifest')) }}">
<link rel="mask-icon" href="{{ absolute_url(asset('images/icons/safari-pinned-tab.svg')) }}" color="{{ meta('Meta : Theme-color') }}">
<link rel="shortcut icon" href="{{ absolute_url(asset('images/icons/favicon.ico')) }}">
<meta name="apple-mobile-web-app-title" content="{{ meta('Meta : Application name') }}">
<meta name="application-name" content="{{ meta('Meta : Application name') }}">
<meta name="msapplication-TileColor" content="{{ meta('Meta : Theme-color') }}">
<meta name="msapplication-TileImage" content="{{ absolute_url(asset('images/icons/favicon-256.png')) }}">
<meta name="msapplication-config" content="{{ absolute_url(asset('images/icons/browserconfig.xml')) }}">
<meta name="theme-color" content="{{ meta('Meta : Theme-color') }}">

{# Open Graph / Facebook #}
<meta property="og:type" content="website">
<meta property="og:url" content="{{ url('homepage') }}">
<meta property="og:title" content="{{ meta('Meta : Title') }}">
<meta property="og:description" content="{{ meta('Meta : Description') }}">
<meta property="og:image" content="{{ absolute_url(asset('images/cover.png')) }}">

{# Twitter #}
<meta property="twitter:card" content="summary_large_image">
<meta property="twitter:url" content="{{ url('homepage') }}">
<meta property="twitter:title" content="{{ meta('Meta : Title') }}">
<meta property="twitter:description" content="{{ meta('Meta : Description') }}">
<meta property="twitter:image" content="{{ absolute_url(asset('images/cover.png')) }}">

{# Google Analytics #}
<script async src="https://www.googletagmanager.com/gtag/js?id={{ meta('Google Analytics ID') }}"></script>
<script>
	window.dataLayer = window.dataLayer || [];
    function gtag() {
    dataLayer.push(arguments);
    }
    gtag('js', new Date());

    gtag('config', '{{ meta('Google Analytics ID') }}');
</script>

